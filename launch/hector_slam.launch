<launch>
  <!-- Static transforms for lidar -->
  <node pkg="tf" type="static_transform_publisher" name="base_to_lidar_base" args="0 0 0.05 0 0 0 base_link lidar_base_cylinder 50"/>
  <node pkg="tf" type="static_transform_publisher" name="lidar_base_to_laser" args="0 0 0.1 0 0 0 lidar_base_cylinder laser_link 50"/>

  <!-- Use simulated time for Gazebo -->
  <param name="use_sim_time" value="true"/>

  <!-- Robot state publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <param name="publish_frequency" value="50"/>
  </node>

  <!-- Hector SLAM node -->
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <param name="pub_map_odom_transform" value="true"/>
    <param name="map_frame" value="map"/>
    <param name="base_frame" value="base_link"/> 
    <param name="odom_frame" value="odom"/>
    <param name="scan_topic" value="/scan"/>
    <param name="map_size" value="2048"/>
    <param name="map_resolution" value="0.05"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5"/>
    <param name="transform_tolerance" value="0.3"/> <!-- Reduced for faster updates -->
    <param name="map_update_distance_threshold" value="0.1"/> <!-- Tighter for small movements -->
    <param name="map_update_angle_threshold" value="0.2"/> <!-- Tighter for small rotations -->
    <param name="laser_z_min_value" value="-0.5"/>
    <param name="laser_z_max_value" value="0.5"/>
    <param name="update_factor_free" value="0.4"/>
    <param name="update_factor_occupied" value="0.9"/>
    <param name="scan_subscriber_queue_size" value="5"/> <!-- Ensure scans are processed -->
    <param name="use_tf_scan_transformation" value="true"/> <!-- Ensure TF alignment -->
  </node>

  <!-- RViz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d '$(find lidar_scanning_robot)/config/lidar_sensor_options.rviz'"/>
</launch>